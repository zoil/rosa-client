{
  "compilerOptions": {
    /* Basic Options */
    "module": "commonjs",
    "declaration": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    // "allowJs": true,
    "outDir": "./dist",
    // "outFile": "./lib/index.js",
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "removeComments": false,
    "rootDir": "./src",
    "sourceRoot": "./src",
    "sourceMap": true,
    "lib": ["es2016", "es2015", "es2015.collection", "es2015.promise", "dom"],
    "target": "es5"
  },
  "exclude": ["examples", "node_modules/**/*", "dist"]
}
